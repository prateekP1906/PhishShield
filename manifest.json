{
  "manifest_version": 3,
  "name": "PhishGuard",
  "version": "1.0",
  "description": "Real-time phishing detection extension",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "assets/icon.svg"
    }
  },
  "icons": {
    "48": "assets/icon.svg"
  }
}
